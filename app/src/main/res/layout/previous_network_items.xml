<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

    <TextView
        android:text="aa:bb:cc:dd:ee:ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prevSsidTextView"
        android:layout_alignLeft="@+id/prevSsidTextView"
        android:layout_alignStart="@+id/prevSsidTextView"
        android:id="@+id/prevBssidTextView"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#cc000000"
        android:textSize="18sp"
        tools:text="aa:bb:cc:dd:ee:ff"/>

    <TextView
        android:text="Mon, Jan 16 8:33 EST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/prevBssidTextView"
        android:layout_toRightOf="@+id/prevBssidTextView"
        android:layout_toEndOf="@+id/prevBssidTextView"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:id="@+id/prevDateConnectTextView"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#cc000000"
        android:textSize="18sp"/>

    <TextView
        android:text="@string/prev_pref_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prevPrefNetworkTextView"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        android:textColor="#cc000000"
        android:layout_alignBaseline="@+id/prevDateConnectTextView"
        android:layout_alignBottom="@+id/prevDateConnectTextView"
        android:layout_alignStart="@+id/prevNetworkEncryption"
        android:layout_alignLeft="@+id/prevNetworkEncryption"/>

    <TextView
        android:text="WPA2_PSK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prevNetworkEncryption"
        android:textSize="18sp"
        android:textColor="#cc000000"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/prevSsidTextView"
        android:layout_toRightOf="@+id/prevDateConnectTextView"
        android:layout_toEndOf="@+id/prevDateConnectTextView"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        tools:text="WPA_PSK"
        android:textAlignment="textEnd"/>

    <TextView
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentNetworkIndicator"
        android:textSize="36sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#cc000000"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/prevSsidTextView"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:text="Your Mom's House"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:id="@+id/prevSsidTextView"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp"
        android:textColor="#cc000000"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/currentNetworkIndicator"
        android:layout_toEndOf="@+id/currentNetworkIndicator"
        android:layout_marginTop="10dp"
        tools:text="Your Mom's House"/>
</RelativeLayout>